/* miniprogram/pages/chat/chat.wxss */
.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.messages-container {
  flex: 1;
  padding: 20rpx;
  overflow: hidden;
}

.messages {
  padding-bottom: 120rpx;
}

.message {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.user-message {
  align-items: flex-end;
}

.bot-message {
  align-items: flex-start;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
}

.user-message .message-content {
  background-color: #4CAF50;
  color: white;
}

.bot-message .message-content {
  background-color: white;
  color: #333;
  border: 1rpx solid #e0e0e0;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.input {
  flex: 1;
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.send-button {
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.send-button[disabled] {
  background-color: #cccccc;
}